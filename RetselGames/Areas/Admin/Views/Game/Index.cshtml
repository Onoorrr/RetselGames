@model List<GameDto>
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">OYUN YÖNETİMİ /</span> OYUNLAR
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Table Basic</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered" id = "gameTables" width="100%" collspacing = "0">
                <thead>
                    <tr>
                        <th>İsim</th>                       
                        <th>Katagori</th>
                        <th>Oluşturan</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>                        
                        <th>Katagori</th>
                        <th>Oluşturan</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>                        
                    </tr>
                </tfoot>

                <tbody class="table-border-bottom-0">
                    
                    @foreach (var game in Model)
                    {
                        <tr name = "@game.Id">
                            <td>@game.Name</td>                            
                            <td>@game.Category.Name</td>
                            <td>@game.CreatedBy</td>
                            <td>@game.CreatedDate.ToShortDateString()</td>
                            <td>@(game.IsDeleted ? "Aktif Değil" : "Aktif" )</td>
                            <td></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

    </div>>
    @section Scripts
    {
        <script src="~/js/gameIndex.js" type="application/ecmascript"></script>
    }
    